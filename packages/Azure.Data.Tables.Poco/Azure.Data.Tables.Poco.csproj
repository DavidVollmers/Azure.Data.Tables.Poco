<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>DavidVollmers.Azure.Data.Tables.Poco</PackageId>
    <Authors>david@vollmers.org</Authors>
    <Copyright>David Vollmers</Copyright>
    <Description>Decorate your POCOs with attributes for easy usage with Azure.Data.Tables</Description>
    <PackageProjectUrl>https://github.com/DavidVollmers/Azure.Data.Tables.Poco</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/DavidVollmers/Azure.Data.Tables.Poco.git</RepositoryUrl>
    <TargetFrameworks>net8.0;net7.0;net6.0</TargetFrameworks>
    <LangVersion>11</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Azure.Data.Tables.Poco.Attributes\Azure.Data.Tables.Poco.Attributes.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Data.Tables" Version="12.9.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\"/>
    <None Include="..\..\LICENSE.txt" Pack="true" PackagePath="\"/>
  </ItemGroup>

</Project>
